rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /designs/{document=**} {
      allow read: if true;
    }
    match /dreams/{document=**} {
      allow read: if true;
    }
    match /contributors/{document=**} {
      allow read: if true;
    }
    match /users/{userId}/{document=**} {
      allow read, update: if request.auth.uid == userId;
    }
  }
}
